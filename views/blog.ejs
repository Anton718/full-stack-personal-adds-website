<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Posts</title>
</head>
<body id="body">
  <%- include('./partials/navbar2.ejs') %>
  <% if (token) { %>
  <%- include('./partials/loginbar.ejs') %>
    <% } else { %>
  <%- include('./partials/logoutbar.ejs') %>
      <% } %>
    <div class="container">
    <h1>Post here:</h1>
    <form action="/post" method="POST">
      <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Title:</label>
          <input name="title" type="text" class="form-control" id="exampleFormControlInput1" required />
        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Text:</label>
          <textarea name="post" class="form-control" id="exampleFormControlTextarea1" rows="5" > </textarea>
        </div>
      <div class="mb-3">
          <input type="submit" value="Post">
      </div>
  </form>
  <% if (response) { %>
    <div class="alert alert-danger" role="alert">
      <a href="/" class="alert-link">Signin</a> <%= response %> 
    </div>
  <% } %>
  <div class="list-group">
      <ul id="list-group" class="list-group">
        <% if (posts) { %>
      <% for (let i of posts) { %>
            <li id="alink"  class="list-group-item list-group-item-action" aria-current="true">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= i.title %></h5>
                 <a style="text-decoration: none;" href="/user_profile/<%=i.id%>">
                    <small style="color: blueviolet;"><%= i.username %></small>
                </a>
              </div>  
            <p class="mb-1"><%= i.content %></p>
            <div style="display: flex; justify-content: space-between; margin-bottom: 10px;">
            <button type="button" class="btn btn-outline-secondary"
              style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Reply</button>
              <% if (i.username === user) { %>
                    <a href="/blog/<%=i.id%>">
                      <img src="images/icons8-delete-67.png" alt="delete">
                    </a>
              <% } %>
            </div>
            <div style="text-align: end;"><span style="color: blueviolet;">0 replies</span></div>
          </li>
      <%}%>
      <% } %> 
        </ul>
    </div>
</body>
</html>