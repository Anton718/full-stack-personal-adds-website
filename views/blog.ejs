<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>Posts</title>
</head>
<body id="body">
  <%- include('./partials/navbar2.ejs') %>
  <% if (token) { %>
  <%- include('./partials/loginbar.ejs') %>
    <% } else { %>
  <%- include('./partials/logoutbar.ejs') %>
      <% } %>
    <div class="container">
    <h1>Post here:</h1>
    <form action="/post" method="POST">
      <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label">Title:</label>
          <input name="title" type="text" class="form-control" id="exampleFormControlInput1" required />
        </div>
        <div class="mb-3">
          <label for="exampleFormControlTextarea1" class="form-label">Text:</label>
          <textarea name="post" class="form-control" id="exampleFormControlTextarea1" rows="5" > </textarea>
        </div>
      <div class="mb-3">
          <input type="submit" value="Post">
      </div>
  </form>
  <% if (response) { %>
    <div class="alert alert-danger" role="alert">
      <a href="/" class="alert-link">Signin</a> <%= response %> 
    </div>
  <% } %>
  <div class="list-group">
      <ul id="list-group" class="list-group">
        <% if (posts) { %>
      <% for (let i of posts) { %>
            <li id="alink"  class="list-group-item list-group-item-action" aria-current="true">
              <div style="display: flex; justify-content: flex-end;">
                <div style="display: flex; flex-direction: column;">
                  <a style="text-decoration: none;" href="/user_profile/<%=i.id%>">
                    <small style="color: blueviolet;"><%= i.username %></small>
                  </a>
                    <img src="<%=i.image%>" class="img-fluid img-thumbnail" style="width:80px;height:80px;" alt="user_photo">
                </div>
              </div>
              <div style="display: flex; flex-direction:column; margin-top: 10px;"> 
                <%=i.username.toUpperCase()%> POSTED:
                <h5 style="margin-top: 10px;" class="mb-1"><%= i.title %></h5>
                <p style="margin-top: 10px;">
                  >> <%= i.content%> <<
                </p>
              </div>
            <div style="display: flex; justify-content:end; margin-bottom: 10px;">
              <% if (i.username === user) { %>
                    <a href="/blog/<%=i.id%>">
                      <img src="images/Icons8_flat_delete_generic.svg" alt="delete">
                    </a>
              <% } %>
            </div>
            <% for (let j of replies) { %>
              <% if (i.id === j.parent_id) {%>
              <p class="fs-6 fw-lighter">#######################</p>
                <div class="fs-6 fw-lighter" style="display: flex; flex-direction: column;"> 
                  <a style="text-decoration: none;">
                    <%=j.username%>
                  </a>
                  <img src="<%=j.image%>" class="img-fluid img-thumbnail" style="width:80px;height:80px;" alt="user_photo">
                </div>
              <div id="<%=j.id%>" class="fw-lighter" style="display: flex; flex-direction:column; color: green; margin-top: 10px;">
                <%=j.username.toUpperCase()%> REPLIED:
                <p style="margin-top: 10px;">
                 >> <%= j.text%> <<
                </p>
              </div>
          <% } %>
          <% } %>
            <br>
            <form action="/addcomment" method="POST">
              <input type="hidden" name="parent_title" value="<%= i.title %>">
              <input type="hidden" name="parent_content" value="<%= i.content %>">
              <input type="hidden" name="parent_username" value="<%= i.username %>">
              <input type="hidden" name="parent_post_id" value="<%= i.id %>">
              <input type="text" class="form-control" id="private" name="child_comment">
              <button type="submit" class="btn btn-outline-secondary"
              style="--bs-btn-padding-y: .05rem; --bs-btn-padding-x: .5rem; --bs-btn-font-size: .75rem;">Reply</button>
            </form>
          </li>
      <%}%>
      <%}%> 
        </ul>
    </div>
</body>
</html>