
<h1>PROFILE</h1>
<div class="card" style="width: 18rem">
  <div class="card-body">
    <h5 class="card-title"><%=user%></h5>
    <% if (yourBio) {%>
    <p class="card-text"><%=yourBio%></p>
    <% } else { %>
    <p class="card-text">Tell us about yourself..</p>
    <% } %>

      <p>
        <form action="/addbio" method="POST">
        <label for="biosection" class="form-label">Bio:</label>
          <textarea name="bio" id="biosection" cols="20" rows="2" aria-placeholder="About yourself"></textarea>
          <input type="submit" value="Update" />
        </form>
      </p>
    <a href="/private" class="btn btn-primary">Private messages</a>
  </div>
</div>
